<CollectionNameChooser>:
    size_hint: (0.85,None)
    height: (70,'sp')
    orientation: 'vertical'
    AndroidTextInput:
        id: newname
        text: ''
        multiline: False
        size_hint: (1.,None)
        height: (30,'sp')
    BoxLayout:
        height: (50,'sp')
        orientation: 'horizontal'
        Button:
            text: 'Cancel'
            on_release: root.popup.dismiss()
        Button:
            text: 'Create collection'
            on_press: app.new_collection(newname.text)
            on_release: root.popup.dismiss()

<SaveQuery>
    orientation: 'vertical'
    collections_list: collections
    ScrollListView:
        id: collections
        scroll_distance: 1
        scroll_timeout: 1000
    
    BoxLayout:
        orientation: 'horizontal'
        size_hint: (1.,0.1)
        Button:
            size_hint: (0.5,1.)
            text: 'Cancel'
            on_press: root.popup.dismiss()
        Button:
            size_hint: (0.5,1.)
            text: 'Save'
            on_press: root.board.save_sgf_in(collections.adapter.selection)
            on_release: root.popup.dismiss()

<CollectionsIndex>:
    id: ci
    collections_list: collections
    orientation: 'horizontal'

    Widget
