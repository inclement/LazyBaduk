                background_down: 'media/blue_press_pixel.png'
    VDividerLine:
        vgap: 0
    Widget

<PrintyButton>:
    text: ''

<MySpinnerOption>:
    height: (48,'sp')
    color: col.icon
    background_color: col.dark_primary


